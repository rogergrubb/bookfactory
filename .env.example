# =============================================
# BookFactory AI - Environment Variables
# =============================================
# Copy this file to .env.local and fill in your values

# =============================================
# DATABASE
# =============================================
# PostgreSQL connection string
# For local: postgresql://user:password@localhost:5432/bookfactory
# For Neon: Get from https://console.neon.tech
# For Supabase: Get from Settings > Database
DATABASE_URL="postgresql://user:password@localhost:5432/bookfactory"

# =============================================
# AUTHENTICATION (Clerk)
# =============================================
# Get these from https://dashboard.clerk.com
# Go to: Your App > API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Clerk redirect URLs (update for production)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/books"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# =============================================
# AI (Anthropic)
# =============================================
# Get from https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY="sk-ant-..."

# =============================================
# PAYMENTS (Stripe)
# =============================================
# Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Webhook secret - Get from Stripe Dashboard > Webhooks
# For local testing, use Stripe CLI: stripe listen --forward-to localhost:3000/api/webhooks/stripe
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs - Create these in Stripe Dashboard > Products
STRIPE_CREATOR_PRICE_ID="price_..."
STRIPE_PROFESSIONAL_PRICE_ID="price_..."
STRIPE_ENTERPRISE_PRICE_ID="price_..."

# =============================================
# FILE STORAGE (Optional - for cover uploads)
# =============================================
# AWS S3 or Cloudflare R2
AWS_ACCESS_KEY_ID="..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REGION="us-east-1"
S3_BUCKET="bookfactory-uploads"

# Or use Cloudflare R2 (S3-compatible)
# R2_ACCOUNT_ID="..."
# R2_ACCESS_KEY_ID="..."
# R2_SECRET_ACCESS_KEY="..."
# R2_BUCKET="bookfactory-uploads"

# =============================================
# APPLICATION
# =============================================
# Your production URL (update for deployment)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Node environment
NODE_ENV="development"

# =============================================
# OPTIONAL INTEGRATIONS
# =============================================
# Email (for notifications, collaboration invites)
# RESEND_API_KEY="re_..."
# SENDGRID_API_KEY="SG...."

# Social Media APIs (for marketing features)
# TWITTER_API_KEY="..."
# TWITTER_API_SECRET="..."
# FACEBOOK_APP_ID="..."
# FACEBOOK_APP_SECRET="..."

# Amazon KDP (for direct publishing)
# KDP_ACCESS_KEY="..."
# KDP_SECRET_KEY="..."
